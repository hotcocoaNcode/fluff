include "macros/print.fm"

int8 in = ' ';
int16 start = 0;
cgalloc 102 start;
int16 ptr = start;
loop {
    cin in;
    ptr <- in;
    ptr = ptr + 1;
    /* not past 100        and  input was not newline */
} lif (ptr < (start + 100)) && (in != '\n');
ptr <- 0x00;
free in;
free ptr;
printString start;

exit 0;